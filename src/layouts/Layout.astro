---
import Header from '@/components/react/Header'
import { ClientRouter } from 'astro:transitions'
import SpeedInsights from '@vercel/speed-insights/astro'

const title = Astro.props.title || 'Motion Leon'

const email = Astro.locals?.user?.email ? Astro.locals?.user?.email : ''
const is_admin = Astro.locals?.user?.is_admin ? true : false
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/global.css" />

    <title>{title}</title>
    <meta name="title" content="MOTION-LEON" />
    <meta name="description" content="Motion Leon - salud y movimiento" />
    <ClientRouter />
  </head>
  <body>
    <article>
      <Header email={email} is_admin={is_admin} client:load />
      <div class="flex flex-col items-center justify-center my-5">
        <div class="w-11/12">
          <slot />
        </div>
      </div>
    </article>
    <SpeedInsights />
  </body>
</html>
